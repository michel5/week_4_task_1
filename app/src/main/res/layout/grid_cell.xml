<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25dp"
        android:minHeight="25dp">

        <TextView
            android:id="@+id/title_vieuw_id"
            android:layout_width="252dp"
            android:layout_height="35dp"
            android:text="onderdeel 1"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/status_id"
            android:layout_width="77dp"

            android:layout_height="38dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/platform_vieuw_id"
            app:layout_constraintTop_toBottomOf="@+id/title_vieuw_id" />

        <TextView
            android:id="@+id/platform_vieuw_id"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_vieuw_id" />

        <TextView
            android:id="@+id/datum_vieuw_id"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/status_id"
            app:layout_constraintTop_toBottomOf="@+id/title_vieuw_id" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>